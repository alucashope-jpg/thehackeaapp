            <!-- Container de Ofertas (Grid responsivo) -->
            <div id="offers-container" class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-8">
                <!-- Cards de ofertas serão injetados aqui -->
            </div>
            
            <div id="no-offers" class="hidden text-center p-12 bg-[var(--color-bg-card)] rounded-xl shadow-xl mt-8 border border-slate-700/50">
