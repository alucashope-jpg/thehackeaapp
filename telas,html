    <script>
        const streamingOffers = [
            { id: 'S1', name: 'Netflix', initials: 'NF', color: '#e50914', originalPrice: 44.90, promoPrice: 26.90, link: '#' },
            { id: 'S2', name: 'Max', initials: 'MAX', color: '#652396', originalPrice: 36.90, promoPrice: 19.90, link: '#' },
            { id: 'S3', name: 'Paramount+', initials: 'P+', color: '#0064FF', originalPrice: 24.90, promoPrice: 16.90, link: '#' },
            { id: 'S4', name: 'Apple TV', initials: 'TV', color: '#A2AAAD', originalPrice: 24.90, promoPrice: 16.90, link: '#' },
            { id: 'S5', name: 'Disney', initials: 'DIS', color: '#273398', originalPrice: null, promoPrice: 19.90, link: '#' },
        ];

        // Formatação do custo para Real Brasileiro (R$)
        function formatCost(cost) {
            if (cost === null || cost === 0) return '';
            return cost.toLocaleString('pt-BR', { style: 'currency', currency: 'BRL' });
        }

        // Renderiza um card de oferta
        function renderOfferCard(offer) {
            
            // Lógica para o preço original riscado
            const originalPriceHtml = offer.originalPrice ? 
                `<p class="text-sm text-slate-400 line-through font-semibold">${formatCost(offer.originalPrice)}</p>` : '';
                
            // Lógica para o preço promocional
            const promoText = offer.originalPrice ? 'Preço Promocional' : 'A partir de';
            
            const html = `
                <div class="offer-card p-6 rounded-xl flex flex-col justify-between h-full">
                    
                    <!-- Nome do Streaming no Topo do Card (MANTIDO CENTRALIZADO) -->
                    <div class="mb-4">
                        <h3 class="text-2xl font-extrabold text-white text-center">${offer.name}</h3>
                    </div>

                    <!-- Detalhes do Preço (Alinhado ao CENTRO) -->
                    <!-- Alterado items-start para items-center para centralizar o bloco de preço -->
                    <div class="mb-8 flex flex-col items-center text-center"> 
                        
                        <!-- Preço Original Riscado (Centralizado) -->
                        <div class="text-center mb-1">
                             ${originalPriceHtml}
                        </div>

                        <!-- Texto Promocional (Centralizado) -->
                        <p class="text-base text-slate-300 font-medium mt-1">${promoText}</p>
                        
                        <!-- Preço Promocional em Destaque (Centralizado) -->
                        <span class="text-5xl font-extrabold text-teal-400 leading-none">
                            ${formatCost(offer.promoPrice)}
                        </span>
                        
                        <!-- Nota de Garantia (Centralizado) -->
                        <p class="text-xs text-slate-500 mt-2 text-center">Acesso imediato e garantia de 30 dias.</p>
                    </div>

                    <!-- Botão ADQUIRIR AGORA (Centralizado) -->
                    <a href="${offer.link}" target="_blank" class="buy-btn py-3 rounded-lg flex items-center justify-center text-base">
                        ADQUIRIR AGORA
                    </a>
                </div>
            `;
            return html;
        }

        // Função principal para renderizar as ofertas
        function renderStreamingOffers() {
            const container = document.getElementById('offers-container');
            container.innerHTML = '';
            
            if (streamingOffers.length === 0) { 
                document.getElementById('no-offers').classList.remove('hidden'); 
                return;
            }
            document.getElementById('no-offers').classList.add('hidden');
            
            streamingOffers.forEach(offer => {
                container.innerHTML += renderOfferCard(offer);
            });

            // Recria ícones lucide 
            lucide.createIcons();
        }
    </script>
</body>
</html>
